<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ projectName | default: "Owner Inspections" }}</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f5f5f5;
            color: #262626;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
        }
        .email-header {
            background-color: #ffffff;
            padding: 30px 40px;
            text-align: center;
            border-bottom: 1px solid #d9d9d9;
        }
        .email-header img {
            max-width: 200px;
            height: auto;
        }
        .email-body {
            padding: 40px;
        }
        .email-body h1 {
            color: #0b487b;
            font-size: 24px;
            margin-top: 0;
            margin-bottom: 20px;
        }
        .email-body h2 {
            color: #0b487b;
            font-size: 20px;
            margin-top: 30px;
            margin-bottom: 15px;
        }
        .email-body p {
            color: #595959;
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 15px;
        }
        .email-footer {
            background-color: #f5f5f5;
            padding: 30px 40px;
            text-align: center;
            border-top: 1px solid #d9d9d9;
        }
        .email-footer p {
            color: #8c8c8c;
            font-size: 14px;
            margin: 5px 0;
        }
        .button {
            display: inline-block;
            padding: 12px 30px;
            background-color: #0b487b;
            color: #ffffff !important;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 600;
            margin: 20px 0;
        }
        .button:hover {
            background-color: #2c9bd6;
        }
        .link {
            color: #2c9bd6;
            text-decoration: none;
        }
        .link:hover {
            text-decoration: underline;
        }
        .alert-success {
            background-color: #10b981;
            color: #ffffff;
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
        }
        .alert-warning {
            background-color: #f59e0b;
            color: #ffffff;
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
        }
        .alert-error {
            background-color: #ef4444;
            color: #ffffff;
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
        }
        .alert-info {
            background-color: #3b82f6;
            color: #ffffff;
            padding: 15px;
            border-radius: 4px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            {% if projectLogo %}
                <img src="{{ projectLogo }}" alt="{{ projectName | default: 'Owner Inspections' }}">
            {% else %}
                <img src="https://bb.owner-inspections.com.au/lovable-uploads/logo/Owner-logo-png.png" alt="Owner Inspections">
            {% endif %}
        </div>
        
        <div class="email-body">
            {% block content %}{% endblock %}
        </div>
        
        <div class="email-footer">
            {% block footer %}
                <p>&copy; {{ "now" | date: "%Y" }} {{ projectName | default: "Owner Inspections" }}. All rights reserved.</p>
                {% if projectUrl %}
                    <p><a href="{{ projectUrl }}" class="link">Visit our website</a></p>
                {% else %}
                    <p><a href="https://ownerinspections.com.au" class="link">Visit our website</a></p>
                {% endif %}
            {% endblock %}
        </div>
    </div>
</body>
</html>
