{% layout "base" %}

{% block content %}
    <h1>Invoice Ready</h1>
    
    <p>Hi{% if firstname %} {{ firstname }}{% endif %},</p>
    
    <p>Your invoice for {{ projectName }} is now ready.</p>
    
    <h2>Invoice Summary</h2>
    
    <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
        <tr style="border-bottom: 1px solid #d9d9d9;">
            <td style="padding: 12px 0; color: #595959; font-weight: 600;">Invoice Number:</td>
            <td style="padding: 12px 0; color: #262626;">{% if invoice_number %}{{ invoice_number }}{% else %}N/A{% endif %}</td>
        </tr>
        <tr style="border-bottom: 1px solid #d9d9d9;">
            <td style="padding: 12px 0; color: #595959; font-weight: 600;">Issue Date:</td>
            <td style="padding: 12px 0; color: #262626;">{% if issue_date %}{{ issue_date }}{% else %}N/A{% endif %}</td>
        </tr>
        <tr style="border-bottom: 1px solid #d9d9d9;">
            <td style="padding: 12px 0; color: #595959; font-weight: 600;">Due Date:</td>
            <td style="padding: 12px 0; color: #262626;">{% if due_date %}{{ due_date }}{% else %}N/A{% endif %}</td>
        </tr>
        <tr style="border-bottom: 2px solid #0b487b;">
            <td style="padding: 12px 0; color: #595959; font-weight: 600;">Total Amount:</td>
            <td style="padding: 12px 0; color: #0b487b; font-weight: 700; font-size: 18px;">{% if total_amount %}${{ total_amount }}{% else %}N/A{% endif %}</td>
        </tr>
    </table>
    
    {% if items %}
    <h2>Items</h2>
    <table style="width: 100%; border-collapse: collapse; margin: 20px 0; border: 1px solid #d9d9d9;">
        <thead>
            <tr style="background-color: #f5f5f5;">
                <th style="padding: 12px; text-align: left; color: #262626; border-bottom: 2px solid #d9d9d9;">Description</th>
                <th style="padding: 12px; text-align: right; color: #262626; border-bottom: 2px solid #d9d9d9;">Amount</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr style="border-bottom: 1px solid #d9d9d9;">
                <td style="padding: 12px; color: #595959;">{{ item.description }}</td>
                <td style="padding: 12px; text-align: right; color: #262626;">${{ item.amount }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
    
    <div style="text-align: center;">
        <a href="{% if payment_url %}{{ payment_url }}{% else %}#{% endif %}" class="button">Pay Now</a>
    </div>
    
    <p style="margin-top: 30px;">Payment can be made via the link above or by bank transfer to:</p>
    
    <div style="background-color: #f5f5f5; padding: 20px; border-radius: 4px; border-left: 4px solid #0b487b;">
        <p style="margin: 5px 0;"><strong>Account Name:</strong> {% if account_name %}{{ account_name }}{% else %}Owner Inspections{% endif %}</p>
        <p style="margin: 5px 0;"><strong>BSB:</strong> {% if bsb %}{{ bsb }}{% else %}N/A{% endif %}</p>
        <p style="margin: 5px 0;"><strong>Account Number:</strong> {% if account_number %}{{ account_number }}{% else %}N/A{% endif %}</p>
        <p style="margin: 5px 0;"><strong>Reference:</strong> {% if invoice_number %}{{ invoice_number }}{% else %}N/A{% endif %}</p>
    </div>
    
    <p>If you have any questions about this invoice, please don't hesitate to contact us.</p>
    
    <p>Best regards,<br>The {{ projectName }} Team</p>
{% endblock %}


